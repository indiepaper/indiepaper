<section class="bg-background">
    <%= render IndiePaperWeb.DashboardView, "_nav_bar.html", assigns %>
    <div class="container-box page-box">
        <h1 class="page-heading" data-test="title">Create Draft</h1>
        <p class="page-description">Create a new draft with just a title, it's that simple.</p>

        <div class="mt-12 max-w-xl">
            <%= form_for @changeset, Routes.draft_path(@conn, :create), fn f -> %>
                <%= if @changeset.action do %>
                    <div class="form-error-box">
                        <p>Oops, Something went wrong. Please check errors below</p>
                    </div>
                <% end %>

                <div class="space-y-4 form-container">
                    <div class="input-container">
                        <%= label f, :title, class: "input-label"  %>
                        <%= text_input f, :title, class: "form-input"  %>
                        <p class="input-error">
                            <%= error_tag f, :title %>
                        </p>
                    </div>

                    <%= submit "Create", class: "primary-button" %>
                </div>
            <% end %>
        </div>
    </div>
</section>