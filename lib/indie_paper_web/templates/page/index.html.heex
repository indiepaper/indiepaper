                <div class="flex justify-center items-center p-2 w-16 h-16 bg-gradient-to-bl from-orange-200 to-indigo-400 rounded-3xl shadow-sm shadow-inner shrink-0">
                    <img src={Routes.static_path(@conn, "/images/file-text-dynamic-color.png")} alt="chat" class="object-cover w-full h-full" />
                </div>
                <div>
