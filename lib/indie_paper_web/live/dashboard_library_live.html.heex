<section class="bg-background">
    <%= render IndiePaperWeb.DashboardView, "_nav_bar.html", assigns %>
    <div class="container-box page-box">
        <div class="max-w-2xl">
            <h1 class="page-heading">Your Library</h1>
            <p class="page-description">
                books that you have purchased will show up here.
            </p>
            <div class="mt-12 space-y-12">
                <%= for order <- @orders do %>
                    <div class="items-stretch p-0 primary-card" data-test={"book-#{order.book.id}"}>
                        <div class="flex flex-row justify-between items-center py-3 px-6 border-b border-secondary-border">
                            <%= live_redirect to: Routes.author_page_path(@socket, :show, order.book.author), class: "py-1 px-2 rounded-full flex flex-row space-x-1.5 border border-secondary-border"  do %>
                                <img class="w-5 h-5 rounded-full" src={IndiePaper.ExternalAssetHandler.get_public_url(order.book.author.profile_picture)} alt="" />
                                <p class="text-sm"><%= IndiePaper.Authors.get_full_name(order.book.author) %></p>
                            <% end %>
                            <p data-test="order-amount"><%= IndiePaper.PaymentHandler.MoneyHandler.humanize(order.amount) %></p>
                        </div>
                        <div class="p-6">
                            <%= link to: Routes.book_path(@socket, :show, order.book) do %>
                                <h2 data-test="order-book-title" class="text-lg"><%= order.book.title %></h2>
                                <h2 data-test="book-title" class="mt-1 text-sm secondary-text"><%= order.book.short_description %></h2>
                            <% end %>
                        </div>

                        <%= if IndiePaper.Orders.is_payment_completed?(order) do %>
                            <div>
                                <div>
                                    <%= for line_item <- order.line_items do %>
                                        <%= link to: Routes.book_read_path(@socket, :index, order.book), id: "read-online-link" do %>
                                            <div class="flex flex-row justify-between items-center py-3 px-6 border-t border-light-border">
                                                <div>
                                                    <p data-test="order-product-title"><%= line_item.product.title %></p>
                                                    <p class="text-sm secondary-text"><%= line_item.product.description %></p>
                                                </div>
                                                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                                                </svg>
                                            </div>
                                        <% end %>
                                    <% end %>
                                </div>
                            </div>
                        <% end %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</section>